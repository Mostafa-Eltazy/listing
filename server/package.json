{
  "name": "node-ts-new-project",
  "scripts": {
    "build": "prisma generate && tsc",
    "start": "node build/src/server.js",
    "db:migrate": "prisma migrate dev",
    "db:migrate:create": "prisma migrate dev --create-only",
    "db:generate": "prisma generate",
    "db:reset": "npx prisma migrate reset --preview-feature",
    "db:migrate:deploy": "prisma migrate deploy",
    "watch:compile": "env-cmd nodemon src/server.ts",
    "watch:typing": "tsc --noEmit --watch",
    "watch": "run-p watch:compile watch:typing",
    "lint": "eslint --ext .js,.ts .",
    "start:dev": "ts-node --transpileOnly src/server.ts"
  },
  "engines": {
    "node": ">=18"
  },
  "main": "build/server.js",
  "dependencies": {
    "@google-cloud/pubsub": "^3.2.1",
    "@google-cloud/storage": "^6.8.0",
    "@hapi/boom": "^10.0.0",
    "@prisma/client": "^4.3.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.185",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.18.1",
    "firebase": "^9.15.0",
    "firebase-admin": "^11.4.0",
    "joi": "^17.6.0",
    "joi-password": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.8.0",
    "sharp": "^0.32.0",
    "short-uuid": "^4.2.2"
  },
  "devDependencies": {
    "@swc-node/register": "^1.5.1",
    "@swc/core": "^1.2.186",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/multer": "^1.4.7",
    "@types/node": "^14.18.28",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "prisma": "^4.3.1",
    "run-p": "^0.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.8.3"
  }
}
